{
  "name": "design-workshop",
  "version": "0.1.0",
  "private": true,
  "description": "设计工坊 - 本地 Photoshop JSX 批处理辅助与简易Web UI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --publish=never",
    "build": "npm run build:win",
    "installer:win": "iscc installer.iss",
    "icons": "node scripts/generate-icons.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.4"
  },
  "build": {
    "appId": "com.designworkshop.app",
    "productName": "设计工坊",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "web/**/*",
      "config.json",
      "icons/**/*",
      "*.vbs",
      "*.bat",
      "*.applescript",
      "*.ps1"
    ],
    "extraResources": [
      {
        "from": "jsx",
        "to": "jsx"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icons/app-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "releaseType": "draft"
    }
  }
}
