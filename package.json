{
  "name": "ps-batch-runner",
  "version": "0.1.0",
  "private": true,
  "description": "本地 Windows 用 Photoshop JSX 批量脚本运行工具（含简易Web UI）",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --publish=never",
    "build": "npm run build:win",
    "installer:win": "iscc installer.iss"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.psbatchrunner.app",
    "productName": "PS Batch Runner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "web/**/*",
      "jsx/**/*",
      "config.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "releaseType": "draft"
    }
  }
}
